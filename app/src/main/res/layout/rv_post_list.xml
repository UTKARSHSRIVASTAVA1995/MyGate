<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="oneCustomer"
            type="com.utkarsh.spokesly.data.models.UserResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_5"
            android:paddingVertical="@dimen/margin_8"
            android:layout_marginBottom="10dp"
            android:id="@+id/llRow">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                app:cardCornerRadius="@dimen/margin_25"
                app:cardElevation="0dp"
                android:id="@+id/cvAvatar">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/iuserid"
                    android:textColor="@color/darkBlue"
                    android:text="JD" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvName"
                        android:layout_marginTop="@dimen/margin_2" />
                    <LinearLayout
                        android:id="@+id/ll_phone_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5">
                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:id="@+id/tvUserName" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            app:layout_constraintTop_toBottomOf="@+id/llRow"
            android:id="@+id/viewHr"
            android:visibility="visible"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_width="match_parent"
            android:background="@color/lightgray"
            android:layout_height="0.5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>